  <form id="orderForm">
    <label for="nombre">Nombre completo:</label>
    <input type="text" id="nombre" name="nombre" required>

    <label for="dni">DNI:</label>
    <input type="text" id="dni" name="dni" required>

    <label for="correo">Correo:</label>
    <input type="email" id="correo" name="correo" required>

    <label for="telefono">Teléfono:</label>
    <input type="tel" id="telefono" name="telefono" required>

    <label for="producto">Producto:</label>
    <select id="producto" name="producto" required>
      <option value="ChocoBites">ChocoBites</option>
      <option value="Trufas Premium">Trufas Premium</option>
      <option value="Tableta 70%">Tableta 70%</option>
      <option value="Cacao en polvo">Cacao en polvo</option>
    </select>

    <label for="cantidad">Cantidad:</label>
    <input type="number" id="cantidad" name="cantidad" min="1" value="1" required>

    <label for="direccion">Dirección:</label>
    <textarea id="direccion" name="direccion" rows="2" required></textarea>

    <label for="comentarios">Comentarios:</label>
    <textarea id="comentarios" name="comentarios" rows="2"></textarea>

    <div class="total-box" id="totalBox">
      Total a pagar: S/ 0.00
    </div>

    <button type="submit">Enviar pedido</button>
    <p id="mensaje" class="mensaje-final"></p>
  </form>

  <footer>
    “Gracias por tu compra... ¡Que Dios te guíe y guarde siempre!”<br>
    <em>Números 6:24</em>
  </footer>

  <script>
    const scriptURL = "https://script.google.com/macros/s/AKfycbypicbViQpx68de35No3yAEd2XoLHOQ5banZ8cmJjn15es3eus8K4rTM8sRtFoPaDiH/exec";

    const form = document.getElementById("orderForm");
    const totalBox = document.getElementById("totalBox");
    const mensaje = document.getElementById("mensaje");

    const precios = {
      "ChocoBites": 10,
      "Trufas Premium": 15,
      "Tableta 70%": 12,
      "Cacao en polvo": 18
    };
    const comisionEnvio = 7;

    document.getElementById("producto").addEventListener("change", calcularTotal);
    document.getElementById("cantidad").addEventListener("input", calcularTotal);

    function calcularTotal() {
      const producto = document.getElementById("producto").value;
      const cantidad = parseInt(document.getElementById("cantidad").value) || 0;
      const subtotal = precios[producto] * cantidad;
      const total = subtotal + comisionEnvio;
      const baseImponible = (total / 1.18).toFixed(2);
      const igv = (total - baseImponible).toFixed(2);
      totalBox.innerHTML = `
        Base Imponible: S/ ${baseImponible}<br>
        IGV (18%): S/ ${igv}<br>
        Comisión de envío: S/ ${comisionEnvio}<br>
        <strong>Total a pagar: S/ ${total.toFixed(2)}</strong>
      `;
    }

    calcularTotal();

    form.addEventListener("submit", e => {
      e.preventDefault();
      mensaje.style.color = "#5a3516";
      mensaje.textContent = "Enviando tu pedido...";

      fetch(scriptURL, { method: "POST", body: new FormData(form) })
        .then(response => {
          if (response.ok) {
            mensaje.style.color = "green";
            mensaje.textContent = "✅ Pedido enviado correctamente. ¡Gracias por tu compra!";
            form.reset();
            calcularTotal();
          } else {
            throw new Error("Error en el envío");
          }
        })
        .catch(() => {
          mensaje.style.color = "red";
          mensaje.textContent = "⚠️ Error de conexión. Intenta nuevamente.";
        });
    });
  </script>
