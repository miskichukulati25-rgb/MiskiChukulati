  <script>
    const scriptURL = "https://script.google.com/macros/s/AKfycbyPkjKHLjC7lbsOWGyloDsCUukDdwZt_eoKsJH5LcT7tdX16FPSCZLZMY7qtenmT_y0/exec";
    const form = document.getElementById("pedidoForm");
    const msg = document.getElementById("msg");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      msg.innerHTML = "‚è≥ Enviando pedido...";
      msg.className = "";

      try {
        const formData = Object.fromEntries(new FormData(form).entries());
        const response = await fetch(scriptURL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData)
        });

        const d = await response.json();

        if (d.success) {
          msg.innerHTML = `<span class="success">‚úÖ Pedido ${d.idPedido} registrado.</span><br>Revisa tu correo para el comprobante.`;
          form.reset();
        } else {
          msg.innerHTML = `<span class="error">‚ùå ${d.error || "No se pudo registrar el pedido."}</span>`;
        }
      } catch (err) {
        msg.innerHTML = `<span class="error">‚ö†Ô∏è Error al conectar con el servidor.</span>`;
      }
    });
  </script>
